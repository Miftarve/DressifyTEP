                // Change icon based on state
                const icon = this.querySelector('i');
                if (sidebar.classList.contains('collapsed')) {
                    icon.classList.remove('fa-chevron-left');
                    icon.classList.add('fa-chevron-right');
                } else {
                    icon.classList.remove('fa-chevron-right');
                    icon.classList.add('fa-chevron-left');
                }
            });
            
            // Mobile Menu Toggle
            const mobileToggle = document.getElementById('mobile-toggle');
            
            mobileToggle.addEventListener('click', function() {
                sidebar.classList.add('active');
            });
            
            // Close sidebar when clicking outside
            document.addEventListener('click', function(e) {
                if (
                    sidebar.classList.contains('active') && 
                    !sidebar.contains(e.target) && 
                    e.target !== mobileToggle
                ) {
                    sidebar.classList.remove('active');
                }
            });
            
            // Modal di dettaglio noleggio
            const rentalModal = document.getElementById('rental-modal');
            const viewButtons = document.querySelectorAll('.view-rental');
            const closeModalButton = document.querySelector('.modal-close');
            const approveButton = document.getElementById('approve-rental');
            const rejectButton = document.getElementById('reject-rental');
            
            // Apri modal al click sul pulsante dettagli
            viewButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const rentalId = this.getAttribute('data-id');
                    
                    // Set rental ID for action buttons
                    approveButton.setAttribute('data-id', rentalId);
                    rejectButton.setAttribute('data-id', rentalId);
                    
                    // Show modal
                    rentalModal.classList.add('show');
                });
            });
            
            // Chiudi modal
            closeModalButton.addEventListener('click', function() {
                rentalModal.classList.remove('show');
            });
            
            // Chiudi modal cliccando all'esterno
            rentalModal.addEventListener('click', function(e) {
                if (e.target === rentalModal) {
                    rentalModal.classList.remove('show');
                }
            });
            
            // Azioni sui noleggi
            const successToast = document.getElementById('success-toast');
            
            approveButton.addEventListener('click', function() {
                rentalModal.classList.remove('show');
                
                // Show success toast
                const toastTitle = successToast.querySelector('.toast-title');
                const toastMessage = successToast.querySelector('.toast-message');
                toastTitle.textContent = 'Richiesta Approvata';
                toastMessage.textContent = 'La richiesta di noleggio è stata approvata con successo.';
                
                successToast.querySelector('.toast-icon').className = 'toast-icon success';
                successToast.querySelector('.toast-icon i').className = 'fas fa-check';
                
                successToast.classList.add('show');
                
                // Hide toast after 5 seconds
                setTimeout(() => {
                    successToast.classList.remove('show');
                }, 5000);
            });
                        rejectButton.addEventListener('click', function() {
                rentalModal.classList.remove('show');
                
                // Show reject toast
                const toastTitle = successToast.querySelector('.toast-title');
                const toastMessage = successToast.querySelector('.toast-message');
                toastTitle.textContent = 'Richiesta Rifiutata';
                toastMessage.textContent = 'La richiesta di noleggio è stata rifiutata.';
                
                successToast.querySelector('.toast-icon').className = 'toast-icon error';
                successToast.querySelector('.toast-icon i').className = 'fas fa-times';
                
                successToast.classList.add('show');
                
                // Hide toast after 5 seconds
                setTimeout(() => {
                    successToast.classList.remove('show');
                }, 5000);
            });
            
            // Chiudi toast
            const toastClose = document.querySelector('.toast-close');
            
            toastClose.addEventListener('click', function() {
                successToast.classList.remove('show');
            });
            
            // Nuovo codice per gestire il filtro tra diretti e per conto terzi
            const viewAllBtn = document.getElementById('view-all');
            const viewDirectBtn = document.getElementById('view-direct');
            const viewBehalfBtn = document.getElementById('view-behalf');
            const tableRows = document.querySelectorAll('.product-table tbody tr');
            
            viewAllBtn.addEventListener('click', function() {
                setActiveToggle(this);
                tableRows.forEach(row => {
                    row.style.display = '';
                });
            });
            
            viewDirectBtn.addEventListener('click', function() {
                setActiveToggle(this);
                tableRows.forEach(row => {
                    const type = row.getAttribute('data-type');
                    row.style.display = type === 'direct' ? '' : 'none';
                });
            });
            
            viewBehalfBtn.addEventListener('click', function() {
                setActiveToggle(this);
                tableRows.forEach(row => {
                    const type = row.getAttribute('data-type');
                    row.style.display = type === 'behalf' ? '' : 'none';
                });
            });
            
            function setActiveToggle(button) {
                viewAllBtn.classList.remove('active');
                viewDirectBtn.classList.remove('active');
                viewBehalfBtn.classList.remove('active');
                button.classList.add('active');
            }
            
            // Ricerca per account e beneficiario
            const accountFilter = document.getElementById('account-filter');
            const beneficiaryFilter = document.getElementById('beneficiary-filter');
            const searchBtn = document.querySelector('.filter-btn');
            
            searchBtn.addEventListener('click', function() {
                const accountSearch = accountFilter.value.toLowerCase();
                const beneficiarySearch = beneficiaryFilter.value.toLowerCase();
                
                tableRows.forEach(row => {
                    const accountEl = row.querySelector('.rental-account span');
                    const beneficiaryEl = row.querySelector('.rental-beneficiary span');
                    
                    const accountText = accountEl ? accountEl.textContent.toLowerCase() : '';
                    const beneficiaryText = beneficiaryEl ? beneficiaryEl.textContent.toLowerCase() : '';
                    
                    let showRow = true;
                    
                    if (accountSearch && !accountText.includes(accountSearch)) {
                        showRow = false;
                    }
                    
                    if (beneficiarySearch && !beneficiaryText.includes(beneficiarySearch)) {
                        showRow = false;
                    }
                    
                    row.style.display = showRow ? '' : 'none';
                });
            });
        });
    </script>
</body>
</html>