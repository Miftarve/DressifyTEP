    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Sidebar Toggle
            const sidebarToggle = document.getElementById('sidebar-toggle');
            const sidebar = document.getElementById('sidebar');

            sidebarToggle.addEventListener('click', function () {
                sidebar.classList.toggle('collapsed');

                // Change the icon based on the state
                const icon = this.querySelector('i');
                if (sidebar.classList.contains('collapsed')) {
                    icon.classList.remove('fa-chevron-left');
                    icon.classList.add('fa-chevron-right');
                } else {
                    icon.classList.remove('fa-chevron-right');
                    icon.classList.add('fa-chevron-left');
                }
            });

            // Mobile Menu Toggle
            const mobileToggle = document.getElementById('mobile-toggle');

            mobileToggle.addEventListener('click', function () {
                sidebar.classList.add('active');
            });

            // Close sidebar when clicking outside
            document.addEventListener('click', function (e) {
                if (
                    sidebar.classList.contains('active') &&
                    !sidebar.contains(e.target) &&
                    e.target !== mobileToggle
                ) {
                    sidebar.classList.remove('active');
                }
            });

            // Modal di dettaglio vendita
            const saleModal = document.getElementById('sale-modal');
            const viewButtons = document.querySelectorAll('.view-sale');
            const closeModalButton = document.querySelector('.modal-close');

            // Apri modal al click sul pulsante dettagli
            viewButtons.forEach(button => {
                button.addEventListener('click', function () {
                    saleModal.classList.add('show');
                });
            });

            // Chiudi modal
            closeModalButton.addEventListener('click', function () {
                saleModal.classList.remove('show');
            });

            // Chiudi modal cliccando all'esterno
            saleModal.addEventListener('click', function (e) {
                if (e.target === saleModal) {
                    saleModal.classList.remove('show');
                }
            });

            // Azioni sugli ordini
            const shipButton = document.getElementById('ship-sale');
            const refundButton = document.getElementById('refund-sale');
            const successToast = document.getElementById('success-toast');

            shipButton.addEventListener('click', function () {
                saleModal.classList.remove('show');

                // Mostra notifica di successo
                const toastTitle = successToast.querySelector('.toast-title');
                const toastMessage = successToast.querySelector('.toast-message');
                toastTitle.textContent = 'Ordine Spedito';
                toastMessage.textContent = 'L\'ordine è stato contrassegnato come spedito.';

                successToast.querySelector('.toast-icon').className = 'toast-icon success';
                successToast.querySelector('.toast-icon i').className = 'fas fa-check';

                successToast.classList.add('show');

                // Nascondi toast dopo 5 secondi
                setTimeout(() => {
                    successToast.classList.remove('show');
                }, 5000);
            });

            refundButton.addEventListener('click', function () {
                saleModal.classList.remove('show');

                // Mostra notifica di rimborso
                const toastTitle = successToast.querySelector('.toast-title');
                const toastMessage = successToast.querySelector('.toast-message');
                toastTitle.textContent = 'Rimborso Effettuato';
                toastMessage.textContent = 'Il rimborso per l\'ordine è stato elaborato con successo.';

                successToast.querySelector('.toast-icon').className = 'toast-icon error';
                successToast.querySelector('.toast-icon i').className = 'fas fa-times';

                successToast.classList.add('show');

                // Nascondi toast dopo 5 secondi
                setTimeout(() => {
                    successToast.classList.remove('show');
                }, 5000);
            });

            // Chiudi toast
            const toastClose = document.querySelector('.toast-close');

            toastClose.addEventListener('click', function () {
                successToast.classList.remove('show');
            });

            // Paginazione
            const pageButtons = document.querySelectorAll('.pagination-button');
            pageButtons.forEach((button, index) => {
                if (index !== 0 && index !== pageButtons.length - 1) {
                    button.addEventListener('click', function () {
                        pageButtons.forEach(btn => {
                            if (btn !== pageButtons[0] && btn !== pageButtons[pageButtons.length - 1]) {
                                btn.classList.remove('active');
                            }
                        });
                        this.classList.add('active');
                    });
                }
            });
        });
        // Add this to the bottom of your vendite.hbs file, inside the script tag
        document.querySelectorAll('.view-sale').forEach(button => {
            button.addEventListener('click', function () {
                const saleId = this.getAttribute('data-id');

                // Get the sale data from the table row
                const row = this.closest('tr');
                const orderId = row.querySelector('td:first-child').textContent;
                const product = row.querySelector('.sale-details strong').textContent;
                const details = row.querySelector('.sale-details small').textContent;
                const userName = row.querySelector('.sale-user span').textContent;
                const date = row.querySelector('.sale-date span').textContent;
                const price = row.querySelector('.product-price').textContent;
                const status = row.querySelector('.status-badge').className.split(' ')[1];

                // Update modal title with order ID
                document.querySelector('.modal-title').textContent = `Dettagli Ordine ${orderId}`;

                // Update action buttons based on current status
                if (status === 'processing') {
                    document.getElementById('ship-sale').style.display = '';
                    document.getElementById('refund-sale').style.display = '';
                } else if (status === 'completed') {
                    document.getElementById('ship-sale').style.display = 'none';
                    document.getElementById('refund-sale').style.display = '';
                } else {
                    document.getElementById('ship-sale').style.display = 'none';
                    document.getElementById('refund-sale').style.display = 'none';
                }

                // Set the sale ID for the action buttons
                document.getElementById('ship-sale').setAttribute('data-id', saleId);
                document.getElementById('refund-sale').setAttribute('data-id', saleId);

                // Show modal
                document.getElementById('sale-modal').classList.add('show');
            });
        });

        // Handle ship and refund actions
        document.getElementById('ship-sale').addEventListener('click', function () {
            const saleId = this.getAttribute('data-id');
            updateSaleStatus(saleId, 'completed');
        });

        document.getElementById('refund-sale').addEventListener('click', function () {
            const saleId = this.getAttribute('data-id');
            updateSaleStatus(saleId, 'refunded');
        });

        function updateSaleStatus(id, status) {
            fetch(`/api/sales/${id}/status`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ status }),
            })
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    return response.json();
                })
                .then(data => {
                    // Close modal
                    document.getElementById('sale-modal').classList.remove('show');

                    // Show success toast
                    const toastTitle = document.querySelector('.toast-title');
                    const toastMessage = document.querySelector('.toast-message');

                    if (status === 'completed') {
                        toastTitle.textContent = 'Ordine Spedito';
                        toastMessage.textContent = 'L\'ordine è stato contrassegnato come spedito.';
                        document.querySelector('.toast-icon').className = 'toast-icon success';
                        document.querySelector('.toast-icon i').className = 'fas fa-check';
                    } else {
                        toastTitle.textContent = 'Rimborso Effettuato';
                        toastMessage.textContent = 'Il rimborso per l\'ordine è stato elaborato con successo.';
                        document.querySelector('.toast-icon').className = 'toast-icon error';
                        document.querySelector('.toast-icon i').className = 'fas fa-times';
                    }

                    document.getElementById('success-toast').classList.add('show');

                    // Reload page after a brief delay
                    setTimeout(() => {
                        window.location.reload();
                    }, 2000);
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Si è verificato un errore durante l\'aggiornamento dello stato.');
                });
        }
