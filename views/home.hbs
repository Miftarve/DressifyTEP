  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Inizializza AOS (Animate On Scroll)
      AOS.init({
        duration: 800,
        once: true,
        mirror: false
      });
      
      // Gestione header al scroll
      const header = document.getElementById('header');
      window.addEventListener('scroll', function() {
        if (window.scrollY > 50) {
          header.classList.add('scrolled');
        } else {
          header.classList.remove('scrolled');
        }
      });
      
      // Mobile menu toggle
      const hamburger = document.getElementById('hamburger');
      const mobileMenu = document.getElementById('mobile-menu');
      const overlay = document.getElementById('overlay');
      const mobileMenuClose = document.getElementById('mobile-menu-close');
      
      hamburger.addEventListener('click', function() {
        mobileMenu.classList.add('active');
        overlay.classList.add('active');
        document.body.style.overflow = 'hidden';
      });
      
      function closeMenu() {
        mobileMenu.classList.remove('active');
        overlay.classList.remove('active');
        document.body.style.overflow = 'auto';
      }
      
      mobileMenuClose.addEventListener('click', closeMenu);
      overlay.addEventListener('click', closeMenu);
      
      // Effetto parallasse per hero-image
      const heroImage = document.querySelector('.hero-image');
      if (heroImage) {
        document.addEventListener('mousemove', function(e) {
          const x = e.clientX / window.innerWidth;
          const y = e.clientY / window.innerHeight;
          
          heroImage.style.transform = `rotateY(${x * 10 - 5}deg) rotateX(${y * -10 + 5}deg)`;
        });
      }
      
      // Data attuale formattata
      const currentDate = '2025-05-02';
      const dateParts = currentDate.split('-');
      const formattedDate = `${dateParts[2]}/${dateParts[1]}/${dateParts[0]}`;
      document.querySelector('.current-date').textContent = formattedDate;
      
      // Verifica la stagione e personalizza i consigli
      const currentMonth = new Date('2025-05-02').getMonth(); // 4 = maggio
      
      // Primavera/estate: mesi 2-8 (marzo-settembre)
      if (currentMonth >= 2 && currentMonth <= 8) {
        // Già personalizzato per primavera/estate
      } else {
        // Inverno/autunno: cambia il titolo della sezione
        document.querySelector('.personalized-title').textContent = 'Collezione Autunno/Inverno';
        
        // Cambia i badge per la stagione fredda
        const badges = document.querySelectorAll('.badge');
        badges[0].innerHTML = '<i class="fas fa-snowflake"></i> Inverno';
        badges[3].innerHTML = '<i class="fas fa-mountain"></i> Montagna';
      }
    });
  </script>
