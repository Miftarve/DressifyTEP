<!DOCTYPE html>
<html lang="it">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dressimify | Gestione Prodotti</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link
        href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Playfair+Display:wght@700&display=swap"
        rel="stylesheet">
    <style>
        /* ===== VARIABILI CSS E TEMA ===== */
        :root {
            /* Colori primari - Palette aggiornata */
            --primary: #6366f1;
            --primary-dark: #4f46e5;
            --primary-light: #eef2ff;
            --secondary: #ec4899;
            --secondary-dark: #db2777;
            --secondary-light: #fcecf4;
            
            /* Sfumature aggiuntive */
            --primary-gradient: linear-gradient(135deg, #6366f1, #4f46e5);
            --secondary-gradient: linear-gradient(135deg, #ec4899, #db2777);
            --blend-gradient: linear-gradient(135deg, #6366f1, #ec4899);

            /* Colori di stato */
            --success: #10b981;
            --success-light: #d1fae5;
            --warning: #f59e0b;
            --warning-light: #fef3c7;
            --danger: #ef4444;
            --danger-light: #fee2e2;
            --info: #3b82f6;
            --info-light: #dbeafe;

            /* Colori neutri */
            --white: #ffffff;
            --gray-50: #f9fafb;
            --gray-100: #f3f4f6;
            --gray-200: #e5e7eb;
            --gray-300: #d1d5db;
            --gray-400: #9ca3af;
            --gray-500: #6b7280;
            --gray-600: #4b5563;
            --gray-700: #374151;
            --gray-800: #1f2937;
            --gray-900: #111827;
            --black: #000000;

            /* Dimensioni e Spaziatura */
            --spacing-xs: 0.25rem;
            --spacing-sm: 0.5rem;
            --spacing-md: 1rem;
            --spacing-lg: 1.5rem;
            --spacing-xl: 2rem;
            --spacing-2xl: 3rem;

            /* Layout */
            --header-height: 4rem;
            --sidebar-width: 18rem;
            --sidebar-collapsed: 5rem;
            --border-radius-sm: 0.25rem;
            --border-radius: 0.5rem;
            --border-radius-md: 0.75rem;
            --border-radius-lg: 1rem;
            --border-radius-xl: 1.25rem;
            --border-radius-full: 9999px;

            /* Animazioni */
            --transition-fast: 150ms cubic-bezier(0.4, 0, 0.2, 1);
            --transition: 300ms cubic-bezier(0.4, 0, 0.2, 1);
            --transition-slow: 500ms cubic-bezier(0.4, 0, 0.2, 1);

            /* Ombre */
            --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
            --shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
            --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
            --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);

            /* Z-index */
            --z-dropdown: 1000;
            --z-sticky: 1020;
            --z-fixed: 1030;
            --z-modal-backdrop: 1040;
            --z-modal: 1050;
            --z-popover: 1060;
            --z-tooltip: 1070;
        }

        /* ===== RESET E STILI GENERALI ===== */
        *,
        *::before,
        *::after {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        html {
            font-size: 16px;
            scroll-behavior: smooth;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
            line-height: 1.5;
            color: var(--gray-800);
            background-color: var(--gray-50);
            overflow-x: hidden;
            min-height: 100vh;
        }

        h1, h2, h3, h4, h5, h6 {
            font-weight: 600;
            line-height: 1.25;
            margin-top: 0;
            color: var(--gray-900);
        }

        a {
            color: var(--primary);
            text-decoration: none;
            transition: all var(--transition-fast);
        }

        a:hover {
            color: var(--primary-dark);
        }

        img, svg {
            max-width: 100%;
            height: auto;
            vertical-align: middle;
        }

        button,
        input,
        select,
        textarea {
            font-family: inherit;
            font-size: 100%;
            line-height: 1.15;
            margin: 0;
        }

        button,
        select {
            text-transform: none;
        }

        button,
        [type="button"],
        [type="reset"],
        [type="submit"] {
            -webkit-appearance: button;
            cursor: pointer;
        }

        button:disabled,
        [type="button"]:disabled,
        [type="reset"]:disabled,
        [type="submit"]:disabled {
            cursor: not-allowed;
            opacity: 0.7;
        }

        /* ===== SCROLLBAR PERSONALIZZATA ===== */
        ::-webkit-scrollbar {
            width: 6px;
            height: 6px;
        }

        ::-webkit-scrollbar-track {
            background: var(--gray-100);
            border-radius: var(--border-radius-full);
        }

        ::-webkit-scrollbar-thumb {
            background: var(--gray-300);
            border-radius: var(--border-radius-full);
        }

        ::-webkit-scrollbar-thumb:hover {
            background: var(--gray-400);
        }

        /* ===== LAYOUT PRINCIPALE ===== */
        .app-container {
            display: flex;
            height: 100vh;
            width: 100%;
            overflow: hidden;
            position: relative;
        }

        /* ===== SIDEBAR ===== */
        .sidebar {
            width: var(--sidebar-width);
            height: 100vh;
            background-color: var(--white);
            border-right: 1px solid var(--gray-200);
            transition: width var(--transition), box-shadow var(--transition);
            overflow-y: auto;
            overflow-x: hidden;
            z-index: var(--z-fixed);
            position: relative;
            box-shadow: var(--shadow);
        }

        .sidebar.collapsed {
            width: var(--sidebar-collapsed);
        }

        .sidebar-header {
            display: flex;
            align-items: center;
            padding: var(--spacing-md) var(--spacing-md);
            border-bottom: 1px solid var(--gray-200);
            height: var(--header-height);
            background: linear-gradient(to right, rgba(99, 102, 241, 0.03), rgba(236, 72, 153, 0.03));
        }

        .brand {
            display: flex;
            align-items: center;
            gap: var(--spacing-sm);
            overflow: hidden;
        }

        .brand-logo {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 2.8rem;
            height: 2.8rem;
            border-radius: var(--border-radius-lg);
            background: var(--blend-gradient);
            color: var(--white);
            font-size: 1.4rem;
            flex-shrink: 0;
            box-shadow: var(--shadow-md);
            position: relative;
            overflow: hidden;
        }

        .brand-logo::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(to bottom right, rgba(255, 255, 255, 0.15), rgba(255, 255, 255, 0));
            border-radius: inherit;
        }

        .brand-name {
            font-family: 'Playfair Display', serif;
            font-weight: 700;
            font-size: 1.5rem;
            background: var(--blend-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            letter-spacing: 0.5px;
        }

        .sidebar-toggle {
            width: 2.2rem;
            height: 2.2rem;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: var(--primary-light);
            border-radius: var(--border-radius-full);
            color: var(--primary);
            border: none;
            margin-left: auto;
            transition: all var(--transition-fast);
        }

        .sidebar-toggle:hover {
            background-color: var(--primary);
            color: var(--white);
            transform: scale(1.05);
        }

        .sidebar-user {
            display: flex;
            align-items: center;
            padding: var(--spacing-md);
            border-bottom: 1px solid var(--gray-200);
            overflow: hidden;
            background: linear-gradient(to right, rgba(99, 102, 241, 0.04), rgba(236, 72, 153, 0.04));
        }

        .user-avatar {
            width: 2.8rem;
            height: 2.8rem;
            border-radius: var(--border-radius-full);
            background: var(--primary-gradient);
            color: var(--white);
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            flex-shrink: 0;
            box-shadow: var(--shadow);
            position: relative;
            border: 2px solid var(--white);
        }

        .user-avatar::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(to bottom right, rgba(255, 255, 255, 0.15), rgba(255, 255, 255, 0));
            border-radius: inherit;
        }

        .user-info {
            margin-left: var(--spacing-md);
            overflow: hidden;
            white-space: nowrap;
        }

        .user-name {
            font-weight: 600;
            color: var(--gray-900);
            font-size: 0.9rem;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .user-role {
            font-size: 0.75rem;
            color: var(--primary);
            overflow: hidden;
            text-overflow: ellipsis;
            font-weight: 500;
        }

        .sidebar-menu {
            padding: var(--spacing-md) 0;
        }

        .menu-category {
            padding: var(--spacing-sm) var(--spacing-md);
            font-size: 0.6875rem;
            text-transform: uppercase;
            font-weight: 600;
            color: var(--gray-500);
            letter-spacing: 0.05em;
            overflow: hidden;
            white-space: nowrap;
            margin-top: var(--spacing-sm);
        }

        .menu-item {
            display: flex;
            align-items: center;
            padding: var(--spacing-sm) var(--spacing-md);
            color: var(--gray-700);
            font-size: 0.875rem;
            text-decoration: none;
            transition: all var(--transition-fast);
            position: relative;
            margin: 0.125rem var(--spacing-sm);
            border-radius: var(--border-radius-md);
        }

        .menu-item-icon {
            width: 1.8rem;
            height: 1.8rem;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: var(--spacing-md);
            color: var(--gray-500);
            flex-shrink: 0;
            font-size: 1rem;
            transition: all var(--transition-fast);
        }

        .menu-item-text {
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            transition: all var(--transition-fast);
        }

        .menu-item:hover {
            background-color: var(--primary-light);
            color: var(--primary);
        }

        .menu-item:hover .menu-item-icon {
            color: var(--primary);
            transform: translateX(2px);
        }

        .menu-item.active {
            background: var(--primary-gradient);
            color: var(--white);
            font-weight: 500;
            box-shadow: var(--shadow);
        }

        .menu-item.active::before {
            box-shadow: 0 0 12px rgba(99, 102, 241, 0.6);
        }

        .menu-item.active .menu-item-icon {
            color: var(--white);
        }

        .menu-badge {
            background-color: var(--danger);
            color: var(--white);
            font-size: 0.6875rem;
            font-weight: 600;
            padding: 0.125rem 0.375rem;
            border-radius: var(--border-radius-full);
            margin-left: auto;
        }

        .sidebar.collapsed .brand-name,
        .sidebar.collapsed .menu-category,
        .sidebar.collapsed .menu-item-text,
        .sidebar.collapsed .user-info {
            opacity: 0;
            display: none;
        }

        .sidebar.collapsed .menu-item {
            justify-content: center;
            padding: var(--spacing-sm);
            margin: 0.125rem auto;
            width: 3rem;
        }

        .sidebar.collapsed .menu-item-icon {
            margin-right: 0;
            font-size: 1.25rem;
        }

        .sidebar.collapsed .menu-badge {
            position: absolute;
            top: 0.125rem;
            right: 0.125rem;
        }

        /* ===== CONTENUTO PRINCIPALE ===== */
        .main-content {
            flex: 1;
            height: 100vh;
            overflow-y: auto;
            display: flex;
            flex-direction: column;
            background-color: var(--gray-50);
            position: relative;
        }

        /* ===== HEADER ===== */
        .header {
            height: var(--header-height);
            background-color: var(--white);
            border-bottom: 1px solid var(--gray-200);
            display: flex;
            align-items: center;
            padding: 0 var(--spacing-lg);
            position: sticky;
            top: 0;
            z-index: var(--z-sticky);
            box-shadow: var(--shadow-sm);
        }

        .mobile-toggle {
            display: none;
            background: none;
            border: none;
            color: var(--gray-600);
            font-size: 1.25rem;
            cursor: pointer;
            margin-right: var(--spacing-md);
            width: 2.2rem;
            height: 2.2rem;
            border-radius: var(--border-radius-full);
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all var(--transition-fast);
        }

        .mobile-toggle:hover {
            background-color: var(--primary-light);
            color: var(--primary);
        }

        .header-title {
            font-size: 1.3rem;
            font-weight: 600;
            color: var(--gray-800);
            display: flex;
            align-items: center;
            gap: var(--spacing-sm);
        }

        .header-title i {
            color: var(--primary);
            font-size: 1.1rem;
        }

        .header-tools {
            display: flex;
            align-items: center;
            margin-left: auto;
            gap: var(--spacing-md);
        }

        .header-search {
            position: relative;
        }

        .search-input {
            padding: var(--spacing-sm) var(--spacing-md) var(--spacing-sm) 2.5rem;
            border: 1px solid var(--gray-300);
            border-radius: var(--border-radius-full);
            background-color: var(--gray-100);
            color: var(--gray-800);
            font-size: 0.875rem;
            transition: all var(--transition-fast);
            width: 14rem;
        }

        .search-input:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.15);
            background-color: var(--white);
        }

        .search-input:hover {
            border-color: var(--gray-400);
        }

        .search-icon {
            position: absolute;
            left: var(--spacing-md);
            top: 50%;
            transform: translateY(-50%);
            color: var(--gray-500);
            font-size: 0.875rem;
        }

        .header-button {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 2.2rem;
            height: 2.2rem;
            border-radius: var(--border-radius-full);
            background-color: var(--gray-100);
            color: var(--gray-600);
            border: none;
            transition: all var(--transition-fast);
            position: relative;
        }

        .header-button:hover {
            background-color: var(--primary-light);
            color: var(--primary);
            transform: translateY(-2px);
        }

        .notification-badge {
            position: absolute;
            top: -0.25rem;
            right: -0.25rem;
            background-color: var(--danger);
            color: var(--white);
            font-size: 0.625rem;
            font-weight: 600;
            width: 1.1rem;
            height: 1.1rem;
            border-radius: var(--border-radius-full);
            display: flex;
            align-items: center;
            justify-content: center;
            border: 2px solid var(--white);
        }

        .header-info {
            display: flex;
            align-items: center;
            color: var(--gray-600);
            font-size: 0.75rem;
            gap: var(--spacing-sm);
            background: var(--primary-light);
            padding: 0.4rem 0.8rem;
            border-radius: var(--border-radius-full);
            box-shadow: var(--shadow-sm);
        }

        .header-info i {
            font-size: 0.875rem;
            color: var(--primary);
        }

        /* ===== BREADCRUMB ===== */
        .breadcrumb {
            display: flex;
            align-items: center;
            padding: var(--spacing-md) var(--spacing-lg);
            background-color: var(--white);
            border-bottom: 1px solid var(--gray-200);
            box-shadow: var(--shadow-sm);
        }

        .breadcrumb-item {
            display: flex;
            align-items: center;
            color: var(--gray-500);
            font-size: 0.875rem;
        }

        .breadcrumb-item a {
            color: var(--gray-500);
            transition: all var(--transition-fast);
            display: flex;
            align-items: center;
        }

        .breadcrumb-item a:hover {
            color: var(--primary);
            transform: translateX(2px);
        }

        .breadcrumb-item i {
            margin-right: var(--spacing-xs);
        }

        .breadcrumb-separator {
            margin: 0 var(--spacing-sm);
            color: var(--gray-400);
            font-size: 0.75rem;
        }

        .breadcrumb-item.active {
            color: var(--primary);
            font-weight: 500;
        }

        /* ===== CONTENUTO DELLA PAGINA ===== */
        .page-content {
            flex: 1;
            padding: var(--spacing-lg);
            position: relative;
        }

        .page-header {
            margin-bottom: var(--spacing-lg);
            position: relative;
        }

        .page-title {
            font-size: 1.7rem;
            font-weight: 700;
            margin-bottom: var(--spacing-xs);
            position: relative;
            display: inline-block;
            background: var(--primary-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .page-title::after {
            content: '';
            position: absolute;
            bottom: -0.25rem;
            left: 0;
            width: 60px;
            height: 4px;
            background: var(--primary-gradient);
            border-radius: var(--border-radius-full);
        }

        .page-description {
            font-size: 0.9rem;
            color: var(--gray-600);
            max-width: 40rem;
            line-height: 1.5;
            margin-top: 0.5rem;
        }

        /* ===== GRID LAYOUT ===== */
        .grid-container {
            display: grid;
            grid-template-columns: 1fr 2fr;
            gap: var(--spacing-xl);
            margin-top: var(--spacing-lg);
        }

        /* ===== CARD ===== */
        .card {
            background-color: var(--white);
            border-radius: var(--border-radius-xl);
            box-shadow: var(--shadow-md);
            transition: all var(--transition);
            overflow: hidden;
            border: 1px solid rgba(0, 0, 0, 0.05);
            height: fit-content;
        }

        .card:hover {
            box-shadow: var(--shadow-lg);
            transform: translateY(-3px);
        }

        .card-header {
            padding: var(--spacing-lg);
            border-bottom: 1px solid var(--gray-200);
            background: linear-gradient(to right, rgba(99, 102, 241, 0.03), rgba(236, 72, 153, 0.03));
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .card-title {
            font-size: 1.2rem;
            font-weight: 600;
            color: var(--gray-800);
            display: flex;
            align-items: center;
            gap: var(--spacing-sm);
        }

        .card-title i {
            color: var(--primary);
            font-size: 1.1rem;
        }

        .card-body {
            padding: var(--spacing-lg);
        }

        /* ===== FORM ===== */
        .form-group {
            margin-bottom: var(--spacing-md);
        }

        .form-label {
            display: block;
            font-size: 0.9rem;
            font-weight: 500;
            color: var(--gray-700);
            margin-bottom: var(--spacing-xs);
            display: flex;
            align-items: center;
            gap: var(--spacing-xs);
        }

        .form-label i {
            color: var(--primary);
            font-size: 0.9rem;
        }

        .form-control {
            width: 100%;
            padding: 0.7rem var(--spacing-md);
            border: 1px solid var(--gray-300);
            border-radius: var(--border-radius-lg);
            background-color: var(--white);
            color: var(--gray-800);
            font-size: 0.95rem;
            transition: all var(--transition-fast);
            box-shadow: var(--shadow-sm);
        }

        .form-control:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.15);
            transform: translateY(-1px);
        }

        .form-control:hover:not(:focus) {
            border-color: var(--gray-400);
        }

        .form-control::placeholder {
            color: var(--gray-400);
        }

        .input-group {
            position: relative;
        }

        .input-group-icon {
            position: absolute;
            left: var(--spacing-md);
            top: 50%;
            transform: translateY(-50%);
            color: var(--gray-500);
            pointer-events: none;
            transition: all var(--transition-fast);
        }

        .input-group .form-control {
            padding-left: 2.5rem;
        }

        .input-group .form-control:focus + .input-group-icon {
            color: var(--primary);
        }

        .form-row {
            display: flex;
            gap: var(--spacing-md);
            margin-bottom: var(--spacing-md);
        }

        .form-col {
            flex: 1;
        }

        .color-samples {
            display: flex;
            flex-wrap: wrap;
            gap: var(--spacing-xs);
            margin-top: var(--spacing-xs);
        }

        .color-sample {
            width: 1.8rem;
            height: 1.8rem;
            border-radius: var(--border-radius-full);
            cursor: pointer;
            border: 2px solid var(--white);
            box-shadow: var(--shadow-sm);
            transition: all var(--transition-fast);
        }

        .color-sample:hover {
            transform: scale(1.15);
            box-shadow: var(--shadow);
        }

        .color-sample.selected {
            border: 2px solid var(--primary);
            transform: scale(1.15);
            box-shadow: 0 0 0 2px rgba(99, 102, 241, 0.25);
        }

        select.form-control {
            appearance: none;
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'%3e%3cpath stroke='%236b7280' stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='M6 8l4 4 4-4'/%3e%3c/svg%3e");
            background-position: right 0.5rem center;
            background-repeat: no-repeat;
            background-size: 1.5em 1.5em;
            padding-right: 2.5rem;
        }

        select.form-control:focus {
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'%3e%3cpath stroke='%234f46e5' stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='M6 8l4 4 4-4'/%3e%3c/svg%3e");
        }

        textarea.form-control {
            min-height: 100px;
            resize: vertical;
        }

        /* Miglioramento campo numerico */
        input[type="number"] {
            appearance: textfield;
        }

        input[type="number"]::-webkit-outer-spin-button,
        input[type="number"]::-webkit-inner-spin-button {
            appearance: none;
            margin: 0;
        }

        .btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            padding: 0.7rem var(--spacing-lg);
            border-radius: var(--border-radius-lg);
            font-weight: 600;
            font-size: 0.95rem;
            transition: all var(--transition);
            cursor: pointer;
            gap: var(--spacing-sm);
            border: none;
            position: relative;
            overflow: hidden;
            letter-spacing: 0.2px;
        }

        .btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transform: translateX(-100%);
            transition: var(--transition-slow);
        }

        .btn:hover::before {
            transform: translateX(100%);
        }

        .btn-primary {
            background: var(--primary-gradient);
            color: var(--white);
            box-shadow: var(--shadow), 0 4px 12px rgba(99, 102, 241, 0.2);
        }

        .btn-primary:hover {
            box-shadow: var(--shadow-lg), 0 8px 18px rgba(99, 102, 241, 0.25);
            transform: translateY(-3px);
        }

        .btn-primary:active {
            transform: translateY(-1px);
        }

        .btn-success {
            background: linear-gradient(135deg, var(--success), #059669);
            color: var(--white);
            box-shadow: var(--shadow), 0 4px 12px rgba(16, 185, 129, 0.2);
        }

        .btn-success:hover {
            box-shadow: var(--shadow-lg), 0 8px 18px rgba(16, 185, 129, 0.25);
            transform: translateY(-3px);
        }

        .btn-success:active {
            transform: translateY(-1px);
        }

        .btn-block {
            width: 100%;
        }

        .btn i {
            font-size: 1.1rem;
        }

        /* ===== TABELLA PRODOTTI ===== */
        .table-container {
            overflow: auto;
            border-radius: var(--border-radius-lg);
            max-height: 600px;
        }

        .product-table {
            width: 100%;
            border-collapse: collapse;
        }

        .product-table th {
            background: linear-gradient(to right, rgba(99, 102, 241, 0.05), rgba(236, 72, 153, 0.02));
            color: var(--gray-700);
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            padding: var(--spacing-md);
            text-align: left;
            border-bottom: 1px solid var(--gray-200);
            position: sticky;
            top: 0;
            z-index: 10;
        }

        .product-table td {
            padding: var(--spacing-md);
            border-bottom: 1px solid var(--gray-200);
            font-size: 0.9rem;
            color: var(--gray-800);
            vertical-align: middle;
            transition: all var(--transition-fast);
        }

        .product-table tr:last-child td {
            border-bottom: none;
        }

        .product-table tr {
            transition: all var(--transition-fast);
        }

        .product-table tr:hover td {
            background-color: var(--gray-50);
        }

        .status-badge {
            display: inline-flex;
            align-items: center;
            padding: 0.25rem 0.6rem;
            border-radius: var(--border-radius-full);
            font-size: 0.75rem;
            font-weight: 600;
            gap: var(--spacing-xs);
            line-height: 1;
        }

        .status-badge.nuovo {
            background-color: var(--success-light);
            color: var(--success);
            box-shadow: var(--shadow-sm);
        }

        .status-badge.usato {
            background-color: var(--warning-light);
            color: var(--warning);
            box-shadow: var(--shadow-sm);
        }

        .status-badge i {
            font-size: 0.6rem;
        }

        .product-price {
            font-weight: 700;
            color: var(--primary);
            font-size: 1rem;
        }

        .product-actions {
            display: flex;
            align-items: center;
            gap: var(--spacing-xs);
        }

        .action-btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            padding: 0.3rem 0.6rem;
            border-radius: var(--border-radius-md);
            font-size: 0.8rem;
            font-weight: 500;
            transition: all var(--transition-fast);
            cursor: pointer;
            gap: var(--spacing-xs);
            box-shadow: var(--shadow-sm);
        }

        .action-btn.edit {
            background-color: rgba(99, 102, 241, 0.1);
            color: var(--primary);
        }

        .action-btn.edit:hover {
            background-color: var(--primary);
            color: var(--white);
            transform: translateY(-2px);
            box-shadow: var(--shadow), 0 4px 8px rgba(99, 102, 241, 0.25);
        }

        .action-btn.delete {
            background-color: rgba(239, 68, 68, 0.1);
            color: var(--danger);
        }

        .action-btn.delete:hover {
            background-color: var(--danger);
            color: var(--white);
            transform: translateY(-2px);
            box-shadow: var(--shadow), 0 4px 8px rgba(239, 68, 68, 0.25);
        }

        /* ===== EMPTY STATE ===== */
        .empty-state {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: var(--spacing-xl);
            text-align: center;
            color: var(--gray-500);
            background: linear-gradient(to right, rgba(99, 102, 241, 0.02), rgba(236, 72, 153, 0.02));
            border-radius: var(--border-radius-lg);
            margin: var(--spacing-lg) 0;
        }

        .empty-state-icon {
            font-size: 3.5rem;
            color: var(--gray-300);
            margin-bottom: var(--spacing-md);
            background: var(--primary-light);
            width: 6rem;
            height: 6rem;
            border-radius: var(--border-radius-full);
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: var(--shadow-md);
            margin-bottom: var(--spacing-lg);
        }

        .empty-state-text {
            font-size: 0.95rem;
            max-width: 20rem;
            margin: 0 auto;
            line-height: 1.6;
        }

        /* ===== PAGINAZIONE ===== */
        .pagination {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-top: var(--spacing-lg);
            padding: var(--spacing) var(--spacing-md);
            background-color: var(--white);
            border-radius: var(--border-radius-lg);
            box-shadow: var(--shadow);
        }

        .pagination-info {
            font-size: 0.9rem;
            color: var(--gray-600);
        }

        .pagination-buttons {
            display: flex;
            gap: var(--spacing-xs);
        }

        .pagination-button {
            width: 2.3rem;
            height: 2.3rem;
            border-radius: var(--border-radius-lg);
            background-color: var(--white);
            border: 1px solid var(--gray-200);
            color: var(--gray-700);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.9rem;
            transition: all var(--transition-fast);
            cursor: pointer;
            box-shadow: var(--shadow-sm);
        }

        .pagination-button:hover:not(:disabled) {
            background-color: var(--primary-light);
            border-color: var(--primary-light);
            color: var(--primary);
            transform: translateY(-2px);
            box-shadow: var(--shadow);
        }

        .pagination-button.active {
            background: var(--primary-gradient);
            color: var(--white);
            border-color: var(--primary);
            box-shadow: var(--shadow), 0 4px 8px rgba(99, 102, 241, 0.25);
        }

        .pagination-button:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }

        /* ===== TOAST NOTIFICATION ===== */
        .toast {
            position: fixed;
            bottom: var(--spacing-lg);
            right: var(--spacing-lg);
            background-color: var(--white);
            border-radius: var(--border-radius-lg);
            box-shadow: var(--shadow-xl);
            padding: var(--spacing-md);
            display: flex;
            align-items: center;
            gap: var(--spacing);
            min-width: 20rem;
            max-width: 30rem;
            transform: translateY(150%);
            opacity: 0;
            transition: all var(--transition);
            z-index: 100;
            border-left: 4px solid var(--primary);
        }

        .toast.show {
            transform: translateY(0);
            opacity: 1;
        }

        .toast-icon {
            width: 3rem;
            height: 3rem;
            border-radius: var(--border-radius-lg);
            display: flex;
            align-items: center;
            justify-content: center;
            flex-shrink: 0;
            font-size: 1.3rem;
        }

        .toast-icon.success {
            background-color: var(--success-light);
            color: var(--success);
        }

        .toast-icon.error {
            background-color: var(--danger-light);
            color: var(--danger);
        }

        .toast-content {
            flex: 1;
        }

        .toast-title {
            font-weight: 600;
            color: var(--gray-900);
            margin-bottom: 0.25rem;
            font-size: 1rem;
        }

        .toast-message {
            font-size: 0.9rem;
            color: var(--gray-600);
            line-height: 1.5;
        }

        .toast-close {
            background: none;
            border: none;
            color: var(--gray-400);
            font-size: 1.4rem;
            line-height: 1;
            cursor: pointer;
            transition: color var(--transition-fast);
            align-self: flex-start;
            display: flex;
            padding: 0.2rem;
        }

        .toast-close:hover {
            color: var(--gray-800);
        }

        /* ===== RESPONSIVE ===== */
        @media (max-width: 1200px) {
            .grid-container {
                grid-template-columns: 1fr 1.5fr;
                gap: var(--spacing-lg);
            }
        }

        @media (max-width: 992px) {
            .grid-container {
                grid-template-columns: 1fr;
                gap: var(--spacing-lg);
            }
        }

        @media (max-width: 768px) {
            .header-search {
                display: none;
            }

            .header-info {
                display: none;
            }

            .mobile-toggle {
                display: flex;
            }

            .sidebar {
                position: fixed;
                left: -100%;
                box-shadow: var(--shadow-lg);
            }

            .sidebar.active {
                left: 0;
            }

            .form-row {
                flex-direction: column;
                gap: var(--spacing-sm);
            }

            .card {
                border-radius: var(--border-radius-lg);
            }

            .page-content {
                padding: var(--spacing);
            }

            .page-title {
                font-size: 1.5rem;
            }
        }

        @media (max-width: 640px) {
            .page-content {
                padding: var(--spacing);
            }

            .pagination {
                flex-direction: column;
                gap: var(--spacing);
                align-items: center;
            }

            .toast {
                min-width: auto;
                max-width: calc(100vw - 2rem);
                left: var(--spacing);
                right: var(--spacing);
            }

            .product-actions {
                flex-direction: column;
                align-items: flex-start;
            }

            .action-btn {
                width: 100%;
            }
        }

        /* ===== ANIMAZIONE E EFFETTI ===== */
        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .fade-in {
            animation: fadeIn 0.5s ease forwards;
        }

        .page-content > * {
            animation: fadeIn 0.5s ease forwards;
        }

        .card {
            animation: fadeIn 0.5s ease forwards;
        }
    </style>
</head>

<body>
    <div class="app-container">
        <!-- Sidebar -->
        <aside class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <div class="brand">
                    <div class="brand-logo">
                        <i class="fas fa-tshirt"></i>
                    </div>
                    <div class="brand-name">Dressimify</div>
                </div>
                <button class="sidebar-toggle" id="sidebar-toggle" title="Comprimi menu">
                    <i class="fas fa-chevron-left"></i>
                </button>
            </div>

            <div class="sidebar-user">
                <div class="user-avatar">M</div>
                <div class="user-info">
                    <div class="user-name">Miftarve</div>
                    <div class="user-role">Amministratore</div>
                </div>
            </div>

            <div class="sidebar-menu">
                <div class="menu-category">Principale</div>
                <a href="/home" class="menu-item">
                    <div class="menu-item-icon">
                        <i class="fas fa-home"></i>
                    </div>
                    <div class="menu-item-text">Dashboard</div>
                </a>
                <a href="/prodotti" class="menu-item active">
                    <div class="menu-item-icon">
                        <i class="fas fa-tshirt"></i>
                    </div>
                    <div class="menu-item-text">Prodotti</div>
                </a>

                <div class="menu-category">Altro</div>

                <a href="/logout" class="menu-item">
                    <div class="menu-item-icon">
                        <i class="fas fa-sign-out-alt"></i>
                    </div>
                    <div class="menu-item-text">Logout</div>
                </a>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Header -->
            <header class="header">
                <button class="mobile-toggle" id="mobile-toggle" title="Menu">
                    <i class="fas fa-bars"></i>
                </button>

                <h1 class="header-title">
                    <i class="fas fa-tshirt"></i>
                    Gestione Prodotti
                </h1>

                <div class="header-tools">
                    <div class="header-info">
                        <i class="far fa-calendar-alt"></i>
                        <span>02/05/2025 14:06</span>
                    </div>
                </div>
            </header>

            <!-- Breadcrumb -->
            <div class="breadcrumb">
                <div class="breadcrumb-item">
                    <a href="/home"><i class="fas fa-home"></i> Dashboard</a>
                </div>
                <div class="breadcrumb-separator">
                    <i class="fas fa-chevron-right"></i>
                </div>
                <div class="breadcrumb-item active">
                    <i class="fas fa-tshirt"></i> Gestione Prodotti
                </div>
            </div>

            <!-- Page Content -->
            <div class="page-content">
                <div class="page-header">
                    <h1 class="page-title">Gestione Catalogo Prodotti</h1>
                    <p class="page-description">Aggiungi, modifica e gestisci i prodotti disponibili per il noleggio
                        nella piattaforma. Tutti i prodotti aggiunti saranno immediatamente visibili agli utenti.</p>
                </div>

                <div class="grid-container">
                    <!-- Form per aggiungere un nuovo prodotto -->
                    <div class="card">
                        <div class="card-header">
                            <h2 class="card-title">
                                <i class="fas fa-plus-circle"></i> Aggiungi Nuovo Prodotto
                            </h2>
                        </div>
                        <div class="card-body">
                            <form method="POST" action="/prodotti" id="add-product-form">
                                <div class="form-group">
                                    <label class="form-label" for="name">
                                        <i class="fas fa-tag"></i> Nome Prodotto
                                    </label>
                                    <input type="text" id="name" name="name" class="form-control"
                                        placeholder="Es: Giacca Elegante" required>
                                </div>

                                <div class="form-row">
                                    <div class="form-col">
                                        <div class="form-group">
                                            <label class="form-label" for="category">
                                                <i class="fas fa-folder"></i> Categoria
                                            </label>
                                            <input type="text" id="category" name="category" class="form-control"
                                                placeholder="Es: Abbigliamento, Calzature..." required>
                                        </div>
                                    </div>
                                    <div class="form-col">
                                        <div class="form-group">
                                            <label class="form-label" for="brand">
                                                <i class="fas fa-copyright"></i> Marca
                                            </label>
                                            <input type="text" id="brand" name="brand" class="form-control"
                                                placeholder="Es: Nike, Adidas, Zara..." required>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-row">
                                    <div class="form-col">
                                        <div class="form-group">
                                            <label class="form-label" for="size">
                                                <i class="fas fa-ruler"></i> Taglia
                                            </label>
                                            <input type="text" id="size" name="size" class="form-control"
                                                placeholder="Es: S, M, L, 42, 44..." required>
                                        </div>
                                    </div>
                                    <div class="form-col">
                                        <div class="form-group">
                                            <label class="form-label" for="color">
                                                <i class="fas fa-palette"></i> Colore
                                            </label>
                                            <input type="text" id="color" name="color" class="form-control"
                                                placeholder="Es: Nero, Blu, Rosso..." required>
                                            <div class="color-samples">
                                                <div class="color-sample" style="background-color: #000000;"
                                                    data-color="Nero" title="Nero"></div>
                                                <div class="color-sample" style="background-color: #FFFFFF;"
                                                    data-color="Bianco" title="Bianco"></div>
                                                <div class="color-sample" style="background-color: #FF0000;"
                                                    data-color="Rosso" title="Rosso"></div>
                                                <div class="color-sample" style="background-color: #0000FF;"
                                                    data-color="Blu" title="Blu"></div>
                                                <div class="color-sample" style="background-color: #008000;"
                                                    data-color="Verde" title="Verde"></div>
                                                <div class="color-sample" style="background-color: #FFFF00;"
                                                    data-color="Giallo" title="Giallo"></div>
                                                <div class="color-sample" style="background-color: #A52A2A;"
                                                    data-color="Marrone" title="Marrone"></div>
                                                <div class="color-sample" style="background-color: #FFC0CB;"
                                                    data-color="Rosa" title="Rosa"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-row">
                                    <div class="form-col">
                                        <div class="form-group">
                                            <label class="form-label" for="condition">
                                                <i class="fas fa-info-circle"></i> Condizione
                                            </label>
                                            <select id="condition" name="condition" class="form-control" required>
                                                <option value="" disabled selected>Seleziona una condizione</option>
                                                <option value="nuovo">Nuovo</option>
                                                <option value="usato">Usato</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-col">
                                        <div class="form-group">
                                            <label class="form-label" for="price">
                                                <i class="fas fa-euro-sign"></i> Prezzo (€/giorno)
                                            </label>
                                            <div class="input-group">
                                                <input type="number" id="price" name="price" class="form-control"
                                                    step="0.01" placeholder="Es: 29.99" required>
                                                <i class="fas fa-euro-sign input-group-icon"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="form-label" for="description">
                                        <i class="fas fa-align-left"></i> Descrizione
                                    </label>
                                    <textarea id="description" name="description" class="form-control" rows="3"
                                        placeholder="Inserisci una descrizione dettagliata del prodotto"></textarea>
                                </div>

                                <div class="form-group">
                                    <button type="submit" class="btn btn-success btn-block">
                                        <i class="fas fa-plus-circle"></i> Aggiungi Prodotto
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- Tabella prodotti -->
                    <div class="card">
                        <div class="card-header">
                            <h2 class="card-title">
                                <i class="fas fa-list"></i> Lista Prodotti
                            </h2>
                        </div>
                        <div class="card-body">
                            <div class="table-container">
                                <table class="product-table">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Categoria</th>
                                            <th>Taglia</th>
                                            <th>Colore</th>
                                            <th>Marca</th>
                                            <th>Condizione</th>
                                            <th>Prezzo</th>
                                            <th>Azioni</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#if products.length}}
                                        {{#each products}}
                                        <tr>
                                            <td>{{id}}</td>
                                            <td>{{category}}</td>
                                            <td>{{size}}</td>
                                            <td>{{color}}</td>
                                            <td>{{brand}}</td>
                                            <td>
                                                <span class="status-badge {{condition}}">
                                                    <i class="fas fa-circle"></i>
                                                    {{#if (eq condition "nuovo")}}Nuovo{{else}}Usato{{/if}}
                                                </span>
                                            </td>
                                            <td class="product-price">€{{price}}</td>
                                            <td>
                                                <div class="product-actions">
                                                    <a href="/modificaProdotto/{{id}}" class="action-btn edit">
                                                        <i class="fas fa-edit"></i> Modifica
                                                    </a>
                                                    <a href="/eliminaProdotto/{{id}}" class="action-btn delete">
                                                        <i class="fas fa-trash"></i> Rimuovi
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                        {{/each}}
                                        {{else}}
                                        <tr>
                                            <td colspan="8">
                                                <div class="empty-state">
                                                    <div class="empty-state-icon">
                                                        <i class="fas fa-box-open"></i>
                                                    </div>
                                                    <div class="empty-state-text">
                                                        Non ci sono ancora prodotti disponibili nel catalogo. 
                                                        Aggiungi il tuo primo prodotto utilizzando il form a lato.
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                        {{/if}}
                                    </tbody>
                                </table>
                            </div>

                            {{#if products.length}}
                            <!-- Paginazione -->
                            <div class="pagination">
                                <div class="pagination-info">
                                    Mostrando 1-{{products.length}} di {{products.length}} prodotti
                                </div>
                                <div class="pagination-buttons">
                                    <button class="pagination-button" disabled>
                                        <i class="fas fa-chevron-left"></i>
                                    </button>
                                    <button class="pagination-button active">1</button>
                                    <button class="pagination-button">
                                        <i class="fas fa-chevron-right"></i>
                                    </button>
                                </div>
                            </div>
                            {{/if}}
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- Toast Notification -->
    <div class="toast" id="success-toast">
        <div class="toast-icon success">
            <i class="fas fa-check"></i>
        </div>
        <div class="toast-content">
            <div class="toast-title">Prodotto Aggiunto</div>
            <div class="toast-message">Il nuovo prodotto è stato aggiunto con successo al catalogo e sarà visibile agli utenti.</div>
        </div>
        <button class="toast-close">&times;</button>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const itemsPerPage = 4;
            const productRows = document.querySelectorAll('.product-table tbody tr');
            const paginationButtons = document.querySelector('.pagination-buttons');
            const paginationInfo = document.querySelector('.pagination-info');
            const totalProducts = productRows.length;
            const totalPages = Math.ceil(totalProducts / itemsPerPage);

            // Nascondi tutte le righe inizialmente
            productRows.forEach(row => {
                row.style.display = 'none';
            });

            function showPage(pageNum) {
                // Nascondi tutte le righe
                productRows.forEach(row => {
                    row.style.display = 'none';
                });

                // Calcola gli indici da mostrare
                const startIndex = (pageNum - 1) * itemsPerPage;
                const endIndex = Math.min(startIndex + itemsPerPage, totalProducts);

                // Mostra le righe della pagina corrente
                for (let i = startIndex; i < endIndex; i++) {
                    if (productRows[i]) {
                        productRows[i].style.display = '';
                    }
                }

                // Aggiorna le informazioni sulla paginazione
                paginationInfo.textContent = `Mostrando ${startIndex + 1}-${endIndex} di ${totalProducts} prodotti`;

                // Aggiorna lo stato attivo dei pulsanti
                const buttons = paginationButtons.querySelectorAll('button:not(:first-child):not(:last-child)');
                buttons.forEach((btn, idx) => {
                    btn.classList.remove('active');
                    if (idx + 1 === pageNum) {
                        btn.classList.add('active');
                    }
                });

                // Abilita/disabilita i pulsanti prev/next
                const prevButton = paginationButtons.querySelector('button:first-child');
                const nextButton = paginationButtons.querySelector('button:last-child');

                prevButton.disabled = pageNum === 1;
                nextButton.disabled = pageNum === totalPages;
            }
            // Crea i pulsanti di paginazione
            function createPaginationButtons() {
                // Svuota i pulsanti esistenti
                paginationButtons.innerHTML = '';

                // Pulsante precedente
                const prevButton = document.createElement('button');
                prevButton.className = 'pagination-button';
                prevButton.innerHTML = '<i class="fas fa-chevron-left"></i>';
                prevButton.disabled = true; // Disabilitato all'inizio
                prevButton.addEventListener('click', () => {
                                        const currentPage = parseInt(paginationButtons.querySelector('.active').textContent);
                    showPage(currentPage - 1);
                });
                paginationButtons.appendChild(prevButton);

                // Pulsanti numerici
                for (let i = 1; i <= totalPages; i++) {
                    const button = document.createElement('button');
                    button.className = 'pagination-button';
                    button.textContent = i;
                    if (i === 1) button.classList.add('active');

                    button.addEventListener('click', () => {
                        showPage(i);
                    });

                    paginationButtons.appendChild(button);
                }

                // Pulsante successivo
                const nextButton = document.createElement('button');
                nextButton.className = 'pagination-button';
                nextButton.innerHTML = '<i class="fas fa-chevron-right"></i>';
                nextButton.disabled = totalPages <= 1; // Disabilitato se c'è solo una pagina
                nextButton.addEventListener('click', () => {
                    const currentPage = parseInt(paginationButtons.querySelector('.active').textContent);
                    showPage(currentPage + 1);
                });
                paginationButtons.appendChild(nextButton);
            }

            // Inizializza la paginazione
            if (totalProducts > 0) {
                createPaginationButtons();
                showPage(1);
            }

            // Sidebar Toggle
            const sidebarToggle = document.getElementById('sidebar-toggle');
            const sidebar = document.getElementById('sidebar');

            sidebarToggle.addEventListener('click', function () {
                sidebar.classList.toggle('collapsed');

                // Change the icon based on the state
                const icon = this.querySelector('i');
                if (sidebar.classList.contains('collapsed')) {
                    icon.classList.remove('fa-chevron-left');
                    icon.classList.add('fa-chevron-right');
                    this.setAttribute('title', 'Espandi menu');
                } else {
                    icon.classList.remove('fa-chevron-right');
                    icon.classList.add('fa-chevron-left');
                    this.setAttribute('title', 'Comprimi menu');
                }
            });

            // Mobile Menu Toggle
            const mobileToggle = document.getElementById('mobile-toggle');

            mobileToggle.addEventListener('click', function () {
                sidebar.classList.add('active');
            });

            // Close sidebar when clicking outside
            document.addEventListener('click', function (e) {
                if (
                    sidebar.classList.contains('active') &&
                    !sidebar.contains(e.target) &&
                    e.target !== mobileToggle
                ) {
                    sidebar.classList.remove('active');
                }
            });

            // Color Samples
            const colorSamples = document.querySelectorAll('.color-sample');
            const colorInput = document.getElementById('color');

            colorSamples.forEach(sample => {
                sample.addEventListener('click', function () {
                    // Remove the selected class from all samples
                    colorSamples.forEach(s => s.classList.remove('selected'));

                    // Add the selected class to the clicked sample
                    this.classList.add('selected');

                    // Set the input value to the sample's color name
                    colorInput.value = this.getAttribute('data-color');
                });
            });

            // Form Submission
            const addProductForm = document.getElementById('add-product-form');
            const successToast = document.getElementById('success-toast');
            const toastClose = document.querySelector('.toast-close');

            addProductForm.addEventListener('submit', function (e) {
                // Demo only - In production, remove this line to allow normal form submission
                if (window.location.hostname === "github.io" || window.location.hostname === "codepen.io") {
                    e.preventDefault();
                    
                    // Simulate form submission animation
                    const submitBtn = this.querySelector('button[type="submit"]');
                    submitBtn.disabled = true;
                    submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Aggiunta in corso...';
                    
                    // Show success toast after a short delay to simulate server processing
                    setTimeout(() => {
                        submitBtn.disabled = false;
                        submitBtn.innerHTML = '<i class="fas fa-plus-circle"></i> Aggiungi Prodotto';
                        
                        // Show success toast
                        successToast.classList.add('show');
                        
                        // Hide toast after 5 seconds
                        setTimeout(() => {
                            successToast.classList.remove('show');
                        }, 5000);
                        
                        // Reset form
                        this.reset();
                    }, 1500);
                }
            });

            // Close toast
            toastClose.addEventListener('click', function () {
                successToast.classList.remove('show');
            });

            // Set current date/time
            const headerInfo = document.querySelector('.header-info span');
            const now = new Date('2025-05-08 18:19:21');
            headerInfo.textContent = formatDate(now);

            // Format date for display
            function formatDate(date) {
                return date.toLocaleDateString('it-IT', {
                    day: '2-digit',
                    month: '2-digit',
                    year: 'numeric'
                }) + ' ' + date.toLocaleTimeString('it-IT', {
                    hour: '2-digit',
                    minute: '2-digit'
                });
            }

            // Add hover effect for action buttons
            const actionButtons = document.querySelectorAll('.action-btn');
            actionButtons.forEach(btn => {
                btn.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-3px)';
                });
                
                btn.addEventListener('mouseleave', function() {
                    this.style.transform = '';
                });
            });
            
            // Input animation
            const formInputs = document.querySelectorAll('.form-control');
            formInputs.forEach(input => {
                input.addEventListener('focus', function() {
                    this.parentElement.classList.add('focused');
                });
                
                input.addEventListener('blur', function() {
                    this.parentElement.classList.remove('focused');
                });
            });
        });
    </script>
</body>

